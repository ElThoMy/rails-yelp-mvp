<div class="container">
<h1>The best Restaurants in town</h1>

<% @restaurants.each do |restaurant| %>
  <p><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %> - <%= restaurant.category %><br>
  <%= restaurant.address %><br>
  <%= restaurant.phone_number %></p>
<% end %>

<%= link_to "Add a Restaurant", new_restaurant_path, class: 'btn btn-primary' %>
</div>
