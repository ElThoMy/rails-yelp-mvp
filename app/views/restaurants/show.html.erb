<div class="container">
<h1> 🍣 <%= @restaurant.name %> 👩‍🍳</h1>
<h2><%= @restaurant.category %> </h2>
<p><%= @restaurant.address%></p>
<p><%= @restaurant.phone_number%></p>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.rating %></p>
  <p><%= review.content %></p>
<% end %>
<p><%= link_to "Leave a review", new_restaurant_review_path(@restaurant) %> </p>
<p><%= link_to "Back", restaurants_path  %></p>
<p><%= link_to "Edit this restaurant", edit_restaurant_path %></p>
</div>
